{
  "name": "crypto-campaign-unified",
  "version": "1.0.0",
  "description": "Unified cryptocurrency campaign donation system with Web3 integration and multi-platform sync support",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run deploy:watch-fast\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:contracts && npm run test:frontend && npm run test:e2e",
    "test:contracts": "cd contracts && npx hardhat test",
    "test:frontend": "cd frontend && npm run test",
    "test:e2e": "playwright test",
    "test:visual": "playwright test tests/visual",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:live-site": "playwright test tests/e2e/live-site-monitoring.spec.js",
    "test:responsiveness": "playwright test tests/visual/form-responsiveness.spec.js",
    "test:wallet-states": "playwright test tests/visual/wallet-connection-states.spec.js",
    "test:error-handling": "playwright test tests/visual/error-handling-ui.spec.js",
    "test:success-screens": "playwright test tests/visual/success-confirmation-screens.spec.js",
    "test:report": "playwright show-report",
    "test:watch": "npm run test:contracts -- --watch",
    "compile": "cd contracts && npx hardhat compile",
    "deploy:local": "cd contracts && npx hardhat run deploy/01-deploy-campaign.js --network localhost",
    "deploy:testnet": "cd contracts && npx hardhat run deploy/01-deploy-campaign.js --network sepolia",
    "deploy:mainnet": "cd contracts && npx hardhat run deploy/01-deploy-campaign.js --network mainnet",
    "deploy": "node scripts/deploy-to-github-pages.js",
    "deploy:quick": "node scripts/deploy-to-github-pages.js --skip-lint",
    "deploy:force": "node scripts/deploy-to-github-pages.js --force",
    "deploy:watch": "node scripts/watch-and-deploy.js",
    "deploy:watch-fast": "node scripts/watch-and-deploy.js --skip-lint --debounce 3",
    "daemon:start": "node scripts/auto-deploy-daemon.js start",
    "daemon:stop": "node scripts/auto-deploy-daemon.js stop",
    "daemon:restart": "node scripts/auto-deploy-daemon.js restart",
    "daemon:status": "node scripts/auto-deploy-daemon.js status",
    "daemon:logs": "node scripts/auto-deploy-daemon.js logs",
    "install:autostart": "node scripts/install-autostart.js",
    "uninstall:autostart": "node scripts/install-autostart.js uninstall",
    "autostart": "node scripts/auto-start-on-directory-open.js",
    "autostart:status": "node scripts/auto-start-on-directory-open.js status",
    "node": "cd contracts && npx hardhat node",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "install:all": "cd frontend && npm install && cd ../backend && npm install && cd ../contracts && npm install",
    "clean": "rimraf */node_modules */dist */build coverage .nyc_output",
    "start:prod": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend && npm start",
    "sync:setup": "./sync-setup.sh",
    "sync:start": "./sync-start.sh",
    "sync:save": "./sync-save.sh",
    "sync:fix": "./sync-fix.sh",
    "version:patch": "./scripts/version.sh patch",
    "version:minor": "./scripts/version.sh minor",
    "version:major": "./scripts/version.sh major",
    "version:custom": "./scripts/version.sh custom",
    "release": "./scripts/release.sh",
    "changelog": "./scripts/changelog.sh",
    "check-boundaries": "./scripts/check-boundaries.sh",
    "platform-status": "./scripts/check-boundaries.sh status",
    "test-donors": "node scripts/form-testing-agent.js --count=10 --type=donors --payment=crypto",
    "test-prospects": "node scripts/form-testing-agent.js --count=10 --type=prospects --payment=crypto",
    "test-mixed": "node scripts/form-testing-agent.js --count=15 --type=mixed --payment=crypto"
  },
  "workspaces": [
    "frontend",
    "backend",
    "contracts"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "@vitejs/plugin-react": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dompurify": "^3.2.6",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "express": "^4.18.3",
    "express-validator": "^7.0.1",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "vite": "^7.1.2",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "chai": "^4.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "playwright": "^1.55.0",
    "prettier": "^3.2.5",
    "puppeteer": "^24.17.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dkdev-io/crypto-campaign-unified.git"
  },
  "keywords": [
    "crypto",
    "campaign",
    "donations",
    "web3",
    "ethereum",
    "fec-compliance",
    "blockchain",
    "multi-platform",
    "sync",
    "lovable",
    "replit"
  ],
  "author": "",
  "license": "MIT"
}
