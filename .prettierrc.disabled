{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.css", "*.scss", "*.sass"],
      "options": {
        "printWidth": 9999,
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "insertPragma": false,
        "requirePragma": false,
        "proseWrap": "preserve"
      }
    }
  ]
}